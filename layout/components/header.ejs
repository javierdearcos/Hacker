<header>
  <div class="site-branding">
    <h1 class="site-title">
      <a href="<%- config.root %>"><%= config.title %></a>
    </h1>
    <p class="site-description"><% if (config.subtitle){ %><%= config.subtitle %><% } %></p>
    <div class="social-media">
      <% if (theme.social) { %>
        <% theme.social.forEach(function(value, key){ %>
          <a href="<%- value.url %>" class="social <%= value.slug %>" target="_blank" rel="external">
            <span class="fa fa-<%= value.slug %>-square"></span>
          </a>
        <% }); %>
      <% } %>
    </div>
  </div>
  <nav class="site-navigation">
    <ul>
      <% for (var i in theme.menu){ %>
        <li><a href="<%- url_for(theme.menu[i]) %>"><%= __(i) %></a></li>
      <% } %>
    </ul>
  </nav>
</header>